<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="product_template_form_view" model="ir.ui.view">
        <field name="name">product.template.dangerous.class</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[last()]" position="after">
                <page name="dangerous" string="Dangerous attributes" attrs="{'invisible':[('type', '!=', 'product')]}">
                    <group>
                        <group>
                            <field name="is_dangerous_good" />
                            <field name="is_dangerous_waste"/>
                            <field name="un_number" attrs="{'invisible': [('is_dangerous_good', '=', False), ('is_dangerous_waste', '=', False)],
                            'required': ['|',('is_dangerous_good', '=', True), ('is_dangerous_waste', '=', True)]}"/>
                        </group>
                        <!-- <field name="dangerous_component_ids"/> -->
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
